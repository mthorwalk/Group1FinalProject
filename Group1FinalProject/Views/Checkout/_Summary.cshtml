@model Group1FinalProject.Models.CheckoutModel

<head>
	<link rel="stylesheet" href="../Views/Checkout/Index.cshtml.css" type="text/css"/>
</head>

<div class="summary">
	<h2 id="summary-txt" class="summary-info">Summary</h2>
	<div class="summary-info">
		Subtotal
		<span>$@Html.DisplayFor(modelItem => Model.Subtotal)</span>
	</div>
	<div class="summary-info">
		Shipping & Handling
		@if (Model.Shipping == 0)
		{
			<span>FREE</span>
		}
		else
		{
			<span>$5.00</span>
		}
	</div>
	<div class="summary-info">
		Taxes
		<span>$@Html.DisplayFor(modelItem => Model.Taxes)</span>
	</div>
	<hr/>
	<div class="summary-info">
		Total
		<span>$@Html.DisplayFor(modelItem => Model.Total)</span>
	</div>
	<button id="purchase" class="summary-info" onclick="location.href='@Url.Action("Purchase", "Checkout")'">Purchase</button>
</div>