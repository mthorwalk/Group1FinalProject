@model Group1FinalProject.Models.CheckoutModel
@{
	ViewData["Title"] = "Checkout";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>@ViewData["Title"]</h1>

@using (Html.BeginForm(actionName: "Purchase", "Checkout", FormMethod.Post))
{
	<h2>Shipping*</h2>
	<div>
		<div class="shipping">
			<span>@Html.RadioButtonFor(model => model.Shipping, 0)</span>
			FREE<br/>Approx. 5-7 Business Days
		</div>
		<div class="shipping" id="five-shipping">
			<span>@Html.RadioButtonFor(model => model.Shipping, 5)</span>
			$5.00<br/>1-3 Business Days
		</div>
	</div>

	<h2>Payment Information</h2>
	<div>
		<div class="payment-info">
			<h3>Card Number</h3>
			@Html.TextBoxFor(x => x.CardNumber, new {id = "txtCardNumber", @class = "form-control", 
				style="width: 50%"})
			@Html.ValidationMessageFor(m => m.CardNumber, "", new {@class = "text-danger"})
		</div>
		<div class="payment-info">
			<h3>Name on Card</h3>
			@Html.TextBoxFor(x => x.NameOnCard, new {id = "txtNameOnCard", @class = "form-control",
				style="width: 50%"})
			@Html.ValidationMessageFor(m => m.NameOnCard, "", new {@class = "text-danger"})
		</div>
		<div class="payment-info">
			<h3>Expiration Date</h3>
			<p>Format: MM/YYYY</p>
			@Html.TextBoxFor(x => x.ExpirationDate, new {id = "txtExpirationDate", @class = "form-control",
				style="width: 50%"})
			@Html.ValidationMessageFor(m => m.ExpirationDate, "", new {@class = "text-danger"})
		</div>
	</div>

	<h2>Review Items</h2>
	<table class="table">
		<thead>
		<tr>
			<th></th>
			<th>Product Name</th>
			<th>Price</th>
			<th>Quantity</th>
		</tr>
		</thead>
		<tbody>
		@foreach (var product in Model.CartItems)
		{
			<tr>
				<td>
					<img src="@Url.Content(product.Image)" width="100" height="100" alt=""/>
				</td>
				<td>
					@Html.DisplayFor(modelItem => product.ProductName)
					<div id="price">$@Html.DisplayFor(modelItem => product.Price)/ea</div>
				</td>
				<td>
					$@Html.DisplayFor(modelItem => product.ProductsPrice)
				</td>
				<td>
					@Html.DisplayFor(modelItem => product.Quantity)
				</td>
			</tr>
		}
		</tbody>
	</table>

	<div class="summary">
		<h2 id="summary-txt" class="summary-info">Summary</h2>
		<div class="summary-info">
			Subtotal
			<span>$@Html.DisplayFor(modelItem => Model.Subtotal)</span>
		</div>
		<div class="summary-info">
			Shipping & Handling
			<span>*</span>
		</div>
		<div class="summary-info">
			Taxes
			<span>$@Html.DisplayFor(modelItem => Model.Taxes)</span>
		</div>
		<hr/>
		<div class="summary-info">
			Total
			<span>$@Html.DisplayFor(modelItem => Model.Total)</span>
		</div>
		<input type="submit" value="Purchase" id="purchase" class="summary-info" onclick="location.href = '@Url.Action("Purchase", "Checkout")'"/>
	</div>
}